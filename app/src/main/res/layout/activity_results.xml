<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
android:orientation="vertical" android:layout_width="match_parent"
android:layout_height="match_parent" android:fitsSystemWindows="true"
android:textAlignment="center"
android:background="#8a0a0a">



<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textAppearance="?android:attr/textAppearanceLarge"
    android:text="This is the Score Screen"
    android:id="@+id/textView2"
    android:textSize="@dimen/abc_action_bar_progress_bar_size"
    android:textAlignment="center"
    android:textColor="#ffffff"
    android:layout_row="9"
    android:layout_column="14"
    android:gravity="right"
    android:layout_alignParentTop="true"
    android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/final_score"
        android:textSize="@dimen/abc_action_bar_progress_bar_size"
        android:textAlignment="center"
        android:textColor="#ffffff"
        android:layout_row="9"
        android:layout_column="14"
        android:gravity="right"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true" />




        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="RESTART"
            android:id="@+id/button6"
            android:textSize="35dp"
            android:onClick="buttonStartClicked"
            android:layout_above="@+id/button7"
            android:layout_centerHorizontal="true"
            android:background="#8a0a0a" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="HOME"
            android:id="@+id/button7"
            android:textSize="35dp"
            android:background="#8a0a0a"
            android:onClick="buttonHomeClicked"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="35dp" />


</RelativeLayout>

