<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:textAlignment="center"
    android:background="#565e6b">

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Elite Four:"
        android:id="@+id/textView"
        android:textAlignment="center"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:textSize="40dp"
        android:textColor="#020835" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Ahmad Maher Meert"
        android:id="@+id/textView4"
        android:textAlignment="center"
        android:layout_below="@+id/textView"
        android:layout_alignParentStart="true"
        android:textSize="40dp"
        android:textColor="#ffffff" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Abdulaziz Alhawas"
        android:id="@+id/textView5"
        android:textAlignment="center"
        android:layout_below="@+id/textView4"
        android:layout_alignParentStart="true"
        android:textSize="40dp"
        android:textColor="#ffffff" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Christoper Marcus"
        android:id="@+id/textView6"
        android:textAlignment="center"
        android:layout_below="@+id/textView5"
        android:layout_alignParentStart="true"
        android:textSize="40dp"
        android:textColor="#ffffff" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Sam Lowe"
        android:textAlignment="center"
        android:id="@+id/textView7"
        android:textSize="40dp"
        android:layout_below="@+id/textView6"
        android:layout_alignParentStart="true"
        android:textColor="#ffffff" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:text="Instructions"
        android:id="@+id/textView8"
        android:layout_below="@+id/textView7"
        android:layout_centerHorizontal="true"
        android:textSize="40dp"
        android:textColor="#020835" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Please Think about the giving scrambled Word and try to make the correct word from it"
        android:id="@+id/textView9"
        android:textAlignment="center"
        android:layout_below="@+id/textView8"
        android:layout_alignParentStart="true"
        android:textIsSelectable="false"
        android:textSize="35dp"
        android:textColor="#ffffff" />
</RelativeLayout>